# ============================================
# ðŸ¤– AI VALIDATOR CONFIGURATION
# Add these to your .env file
# ============================================

# Enable AI Validator
USE_AI_VALIDATOR=True

# AI Provider Selection
# Options: grok, claude, openai, gemini
AI_PROVIDER=grok

# Validation Mode
# - all: Analyze every signal
# - borderline: Only signals with score 7-10 (recommended)
# - tiebreaker: When filters conflict
AI_VALIDATOR_MODE=borderline

# Score Range for Borderline Mode
AI_MIN_SCORE_FOR_CHECK=7
AI_MAX_SCORE_FOR_CHECK=10

# API Settings
AI_TIMEOUT_SECONDS=5
AI_MAX_RETRIES=2
AI_MIN_CONFIDENCE=0.6  # Minimum 60% AI confidence to approve

# Accuracy Tracking
TRACK_AI_ACCURACY=True
AI_HISTORY_FILE=logs/ai_validator_history.json

# ============================================
# ðŸ”‘ API KEYS (Choose one or more)
# ============================================

# Grok (xAI) - Best for crypto market analysis
# Get key from: https://console.x.ai/
XAI_API_KEY=xai-your-api-key-here

# Claude (Anthropic) - Fast and accurate
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenAI GPT - Cost-effective
# Get key from: https://platform.openai.com/
OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini - Fastest and cheapest
# Get key from: https://makersuite.google.com/
GOOGLE_API_KEY=your-gemini-key-here

# ============================================
# ðŸŽ¯ OPTIONAL: Custom AI Model
# ============================================
# Leave empty to use defaults per provider:
# - Grok: grok-2-latest
# - Claude: claude-3-haiku-20240307
# - OpenAI: gpt-4o-mini
# - Gemini: gemini-1.5-flash

# AI_MODEL=grok-beta
# AI_MODEL=claude-3-5-sonnet-20241022
# AI_MODEL=gpt-4o
# AI_MODEL=gemini-1.5-pro

# ============================================
# ðŸ“Š ENTRY PIPELINE INTEGRATION
# ============================================

# Enable Entry Pipeline (5-stage validation)
USE_ENTRY_PIPELINE=True

# Stage 5: AI Check (part of Entry Pipeline)
USE_AI_CHECK=True
AI_CHECK_BORDERLINE_ONLY=True

# ============================================
# ðŸ’¡ QUICK START GUIDE
# ============================================
#
# 1. Choose your AI provider (Grok recommended)
# 2. Get API key and set it above
# 3. Set USE_AI_VALIDATOR=True
# 4. Run test: python scripts/test_ai_validator.py
# 5. Start bot: python bot.py
